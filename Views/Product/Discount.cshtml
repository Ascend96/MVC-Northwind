@using Northwind.Models
@model IEnumerable<Discount>

    <div id="toast" class="toast">
        <div class="toast-header">
            <strong class="mr-auto" id="product" data-value="Seasoning"></strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            Discount Code: <strong id="code" data-value="CODE"></strong>
        </div>
    </div>

    <div>
        <ul class="list-group"></ul>
        @foreach (Discount item in Model)
        {   
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="d-flex w-100 justify-content-between">
                        <h3>@item.Title</h3>
                    </div>
                    <p class="mb-1">@item.Description</p>
                    <i>Discount Expires: @item.EndTime.ToString("MM/dd/yyyy")</i><br />
                <a href="#" class="code" data-code="@item.Code" data-product="@item.Title"><i class="far fa-hand-point-right"></i> Discount Code</a>
                </li>
        }
        </ul>
    </div>

@section Scripts {
    <script src="~/js/app.js"></script>
}
