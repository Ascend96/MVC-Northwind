@model Northwind.Models.Customer

<div class="bg-primary m-1 p-1"><h1>Registration</h1></div>
<form asp-action="Register" method="POST">
    <div asp-asp-validation-summary="All"></div>
        <label asp-for="@Model.CompanyName"></label>
        <input asp-for="@Model.CompanyName" placeholder="Company Name" class="form-control">
    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <label asp-for="@Model.Address"></label>
                <input asp-for="@Model.Address" placeholder="Address" class="form-control">
            </div>
            <div class="col-md-6">
                <label asp-for="@Model.Region"></label>
                <input asp-for="@Model.Region" placeholder="Region" class="form-control">
            </div>
        </div>
    </div>
        <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label asp-for="@Model.City"></label>
                <input asp-for="@Model.City" placeholder="City" class="form-control">
            </div>
            <div class="col-md-4">
                <label asp-for="@Model.Country"></label>
                <input asp-for="@Model.Country" placeholder="Country" class="form-control">
            </div>
            <div class="col-md-4">
                <label asp-for="@Model.PostalCode"></label>
                <input asp-for="@Model.PostalCode" placeholder="Postal Code" class="form-control">
            </div>
        </div>
    </div>
    <div class="row">
            <div class="col-md-6">
                <label asp-for="@Model.Phone"></label>
                <input asp-for="@Model.Phone" placeholder="Phone" class="form-control">
            </div>
            <div class="col-md-6">
                <label asp-for="@Model.Fax"></label>
                <input asp-for="@Model.Fax" placeholder="Fax" class="form-control">
            </div>
        </div>
<br>
    <button type="submit" class="btn btn-outline-primary">Register</button>
</form>
